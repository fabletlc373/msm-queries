<h1> Actor # <%=@aid %> details</h1>
<a href="/actors"> Go back </a>
<hr>
<dl>
  <dt> Name </dt>
  <dd> <%= @adetails.name %> </dd>

  <dt> Dob </dt>
  <dd> <%= @adetails.dob %> </dd>

  <dt> Bio </dt>
  <dd> <%= @adetails.bio %> </dd>

  <dt> Image </dt>
  <dd> <img src=<%= @adetails.image %> style="width:250px;"> </dd>

  <dt> Created at </dt>
  <dd> <%= @adetails.created_at %> </dd>

  <dt> Updated at </dt>
  <dd> <%= @adetails.updated_at %> </dd>

</dl>

<hr>

<h1> Filmography </h1>
<table border="1">
    <tr>
      <th>
        Title
      </th>

      <th>
        Year
      </th>

      <th>
        Director
      </th>

      <th>
        Character name
      </th>

      <th>
      </th>
  </tr>

  
  <% @movies.each do |m| %>
    <tr>
      <td>
        <%= Movie.where({:id => m.movie_id}).first.title%>
      </td>
      <td>
        <%= Movie.where({:id => m.movie_id}).first.year%>
      </td>
      <td>
        <%= Director.where({:id => Movie.where({:id => m.movie_id}).first.director_id}).first.name %>
      </td>
      <td>
        <%= m.name%>
      </td>
      <td>
        <a href="/movies/<%=m.movie_id%>">Show details</a>
      </td>
    </tr>
  <% end %>
  
</table>
